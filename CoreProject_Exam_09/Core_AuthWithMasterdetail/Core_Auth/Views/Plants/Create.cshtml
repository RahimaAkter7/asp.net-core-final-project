@model Core_Auth.Models.ViewModels.PlantVM

@{
    ViewData["Title"] = "Create";
}

<h2 class="btn btn-primary">Add New Plant</h2>


<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row justify-content-center">
        <div class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlantName" class="control-label"></label>
                <input asp-for="PlantName" class="form-control" />
                <span asp-validation-for="PlantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockDate" class="control-label"></label>
                <input asp-for="StockDate" class="form-control" type="date" />
                <span asp-validation-for="StockDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeId" class="control-label"></label>
                <select asp-for="SizeId" class="form-control" asp-items="ViewBag.SizeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PictureFile" class="control-label"></label>
                <input asp-for="PictureFile" class="form-control" />
                <span asp-validation-for="PictureFile" class="text-danger"></span>
            </div>
          
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvaible" /> @Html.DisplayNameFor(model => model.IsAvaible)
                </label>
            </div>

        </div>
        <div class="col-6">
            <div class="d-flex justify-content-end">
                <a class="btn btn-primary text-white" id="btnPlus">Add More</a>
            </div>
            <div id="PotContainer">
                <script>
                    LoadSpot();
                </script>
            </div>
        </div>

    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index" class="btn btn-success btn-sm">Back</a>
</div>


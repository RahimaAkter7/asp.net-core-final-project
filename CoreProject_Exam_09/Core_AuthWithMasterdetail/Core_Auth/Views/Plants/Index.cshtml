@model IEnumerable<Core_Auth.Models.Plant>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div>
    <a class="d-flex justify-content-end btn-sm" asp-controller="Plants" asp-action="Create">Create</a>
</div>

@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <div>
                <img src="@item.Picture" width="32" class="mr-2" />
                Name: @item.PlantName
            </div>
            <div>

                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Plants" asp-route-id="@item.PlantId">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Plants" asp-route-id="@item.PlantId">Delete</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>PotId</th>
                        <th>Pot Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var singleEntry in item.StockEntries)
                    {
                        <tr>
                            <td>@singleEntry.potId</td>
                            <td>@singleEntry.pot.potName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
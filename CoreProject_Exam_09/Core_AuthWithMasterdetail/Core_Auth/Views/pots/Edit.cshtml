@model Core_Auth.Models.pot

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>pot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="potId" />
            <div class="form-group">
                <label asp-for="potName" class="control-label"></label>
                <input asp-for="potName" class="form-control" />
                <span asp-validation-for="potName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success btn-sm">Back</a>
</div>


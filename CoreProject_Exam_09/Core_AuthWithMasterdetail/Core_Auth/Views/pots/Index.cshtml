@model IEnumerable<Core_Auth.Models.pot>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.potName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.potName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.potId">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.potId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.potId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
